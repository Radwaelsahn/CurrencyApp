<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="@color/colorPrimary" />

            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#0500CECB" />

            <corners android:radius="20dp" />

            <padding
                android:bottom="@dimen/_8sdp"
                android:left="@dimen/_26sdp"
                android:right="@dimen/_26sdp"
                android:top="@dimen/_8sdp" />

        </shape>
    </item>

</layer-list>