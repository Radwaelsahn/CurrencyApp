<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CurrencyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:windowBackground">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="background">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:editTextStyle">@style/editTextStyle</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CurrencyApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CurrencyApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CurrencyApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.CurrencyApp.Title">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.CurrencyApp.label">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:layout_marginTop">@dimen/_16sdp</item>
    </style>

    <style name="Theme.CurrencyApp.Text">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
    </style>

    <style name="editTextStyle" parent="@android:style/Widget.EditText">
<!--        <item name="android:background">@android:color/transparent</item>-->
        <item name="android:background">@drawable/edit_background_selector</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

</resources>